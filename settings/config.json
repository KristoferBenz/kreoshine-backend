{
    "application": {
        "host": "127.0.0.1",
        "port": "8080",
        "thread_pool_size": 5,
        "postgresql": {
            "host": "127.0.0.1",
            "credentials": {
                "login": "postgres",
                "password": "postgres"
            }
        }
    },
    "access_log_format": "%a %{X-Real-IP}i %t \"%r\" %s %b \"%{User-Agent}i\" %D",
    "logging": {
        "version": 1,
        "handlers": {
            "service_file": {
                "class": "logging.handlers.RotatingFileHandler",
                "filename": "/var/log/kreoshine/service.log",
                "maxBytes": 10485760,
                "backupCount": 4,
                "formatter": "default",
                "level": "DEBUG"
            }
        },
        "loggers": {
            "app":{
                "handlers": ["service_file"],
                "level": "DEBUG"
            }
        },
        "formatters": {
            "default": {
                "format": "%(asctime)s %(levelname)-8s [%(filename)s:%(lineno)s] %(message)s"
            }
        }
    }
}
